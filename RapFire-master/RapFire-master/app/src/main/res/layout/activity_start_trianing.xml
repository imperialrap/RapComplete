<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_trianing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="info.androidhive.firebase.Start_Training">

    <TextView
        android:text="@string/StartTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="50dp"
        android:id="@+id/textView14" />

    <Button
        android:text="@string/MainScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/button12"
        android:onClick="onClickBack"/>

    <Button
        android:text="@string/start_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/button13"
        android:onClick="onClickStartRecording"
        tools:background="@android:color/holo_orange_dark"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="@string/stop_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/button25"
        android:onClick="onClickStopRecording"
        tools:background="@android:color/holo_orange_dark"
        android:layout_below="@+id/button13"
        android:layout_centerHorizontal="true" />
    Â 
</RelativeLayout>

</RelativeLayout>
